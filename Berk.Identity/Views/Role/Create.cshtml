@model RoleCreateModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" method="post" class="p-4 w-75 mx-auto shadow">

	<div class="mb-3">
		<label>Rol Adı: </label>
		<span class="text-danger" asp-validation-for="@Model.Name"></span> @*Tamamiyle usercreatemodel'deki required hata kontrolleri için*@
		<input asp-for="@Model.Name" class="form-control" />
	</div>


	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Ekle</button>
	</div>

	<div class="text-danger mt-2" asp-validation-summary="ModelOnly">
		@*sadece modeldeki hatalar burada gözüksün*@

	</div>


</form>